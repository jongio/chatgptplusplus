{
    "manifest_version": 3,
    "name": "ChatGPT++",
    "version": "0.2.1",
    "description": "Adds features to ChatGPT interface.",
    "permissions": ["storage", "scripting"],
    "host_permissions": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
    "content_scripts": [
      {
        "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  